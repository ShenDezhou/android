<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/imageView_item_cover"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView_item_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#600f"
        android:layout_alignTop="@id/imageView_item_cover"
        android:layout_toRightOf="@id/imageView_item_cover"
        android:layout_marginLeft="10dp"
        android:text="新闻标题" />
    
    <TextView
        android:id="@+id/textView_item_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_item_subject"
        android:layout_alignLeft="@id/textView_item_subject"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:maxLines="3"
        android:text="新闻概述"/>

</RelativeLayout>
